<h1>Login or <%= link_to  "Create New Account", new_user_path %></h1>

<% if flash["error"] %>
  <div><%= flash["error"] %></div>
<% end %>

<%= form_tag( '/login' ) do %>
<div class="form-group">
  <%= label_tag :email %>
  <%= email_field_tag (:email), "", class: "form-control" %>
</div>
<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, "", class: "form-control" %>
</div>
  <%= submit_tag "Login", class: "btn btn-primary" %>

<% end %>