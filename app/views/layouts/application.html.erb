<!DOCTYPE html>
<html>
  <head>
    <title>WhyaReads</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar  navbar-expand-lg bg-gradient-info  mr-auto">
        
          <%= link_to  "Home", root_path, class: 'nav-link nav-item text-white' %>
          <%= link_to  "Authors", authors_path, class: 'nav-link nav-item text-white' %>
          <% if current_user %>
              <%= link_to "Add a New Book", new_book_path, class: 'nav-link nav-item text-white' %>
              <%= link_to  "Go to my Profile", user_path(current_user.id), class: 'nav-link nav-item text-white' %>
              <%= link_to "Logout", logout_path, method: "DELETE", class: 'nav-link nav-item text-white' %>
            <% else %>
              <%= link_to "Login", login_path, class: 'nav-link' %></li>
          <% end %>
        
    </nav>
    <div class="container">
    <%= yield %>
    </div>
    
    </div>
  </body>
</html>
