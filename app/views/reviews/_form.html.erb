<div>
<h2><%= @book.title %></h2>
<%= form_for @review do |form| %>
   
        <div class="form-group">
        <%= form.label :rating %>
        <%= form.select :rating, (1..5), {}, {:class => 'form-control'} %>
        </div>
        <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control' %>
        </div>
        
        <%= form.button :submit, class: 'btn btn-primary' %>    
    
<% end %>



</div>

