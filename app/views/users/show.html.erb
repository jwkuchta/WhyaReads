<div class="jumbotron">
<h1>Hello <%= @user.name %>!</h1>

<h3>All My Books</h4>

<%= form_tag user_path(current_user.id), method: "get" do %>
  <%= select_tag :status, options_for_select(["All", "Currently reading", "Want to read", "Read"]),
       prompt: "Select Bookshelf" %>
  <%= submit_tag "Submit", class:"btn btn-primary" %>
<% end %>

<ul>
<% @books.each do |book| %>
  <li><%= link_to book.title, book_path(book) %></li>
<% end %>
</ul>

<h3>My Reviews</h3>
<% if @user.reviews.any? %>
  <p>You have reviewed <%= @user.reviews.count %> books. Thanks!</p>
  <% @user.reviews.each do |review| %>
  <p><%= review.book.title %>: <%= review.comment %> - rating: <%= review.rating %>  <%= link_to  "Edit Review", edit_review_path(review.id), class: 'btn btn-info' %>  <%= link_to  "Delete Review", review_path(review), class: 'btn btn-danger',method: :delete, data: {confirm: 'Are you sure?'} %></p>
  <% end %>
<% else %>
  <p>You don't have any reviews yet.</p>
<% end %>
